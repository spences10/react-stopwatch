{
  "name": "react-stopwatch",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts": "1.1.1",
    "styled-components": "3.1.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build":
      "npm run clean && react-scripts build && mv build stopwatch",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "clean": "rm -rf stopwatch/ && rm -rf build/",
    "format":
      "prettier es5 --no-semi --single-quote --write src/**/*.js",
    "now:deploy": "npm run build && now stopwatch/",
    "now:clean": "now rm stopwatch --safe --yes"
  },
  "pre-commit": ["format"],
  "devDependencies": {
    "prettier": "1.11.0"
  }
}
